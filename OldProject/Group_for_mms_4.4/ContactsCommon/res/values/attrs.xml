		<attr name="promptVertOffset" format="dimension"></attr>
		<attr name="sectionFontSize" format="dimension"></attr>
		<attr name="fullSectionsId" format="reference"></attr>
		<attr name="replacedSectionsId" format="reference"></attr>
		<attr name="sectionBaselinesId" format="reference"></attr>
		<attr name="bladeIndicator" format="reference"></attr>
		<attr name="indicatorTopsId" format="reference"></attr>
                <attr name="enableSectionColor" format="color"></attr>
		<attr name="disableSectionColor" format="color"></attr>
		<attr name="enablePromptColor" format="color"></attr>
		<attr name="disablePromptColor" format="color"></attr>
