<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/multi_select_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/multi_select_item_background" >

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_section_divider_holo_custom"
        android:clickable="false"
        android:focusable="false"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/header"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/phone_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/contact_name"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/photo"
        android:layout_width="@dimen/contact_browser_list_item_photo_size"
        android:layout_height="@dimen/contact_browser_list_item_photo_size"
        android:layout_alignParentRight="true"
        android:layout_below="@id/header" />

</RelativeLayout>