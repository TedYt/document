<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/folder_preview"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:background="@color/image_pre_background"/>

    <TextView
        android:id="@+id/folder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/folder_preview"
        android:layout_toLeftOf="@+id/folder_arrow"
        android:layout_centerVertical="true"
        android:ellipsize="end"/>

    <ImageView
        android:id="@+id/folder_arrow"
        android:src="@drawable/folder_list_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>